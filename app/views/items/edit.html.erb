<header>
<!-- header-banner -->
<div id="header-banner">
    <div class="banner-content single-page text-center">
        <div class="banner-border">
            <div class="banner-info">
                <h1>Edition de l'article</h1>
            </div><!-- / banner-info -->
        </div><!-- / banner-border -->
    </div><!-- / banner-content -->
</div>
<!-- / header-banner -->
</header>
<!-- / header -->
<section id="shop">
  <div class="container space-top-30">
    <div class="row">
        <!-- product content area -->
      <div class="col-sm-2"></div>
      <div class="col-sm-6 col-md-7 product-content-area">
        <%= form_for(@item, url: {action: "update", method: :patch}) do |f| %>
            <div class="form-group">
              <%= f.label :title, 'Prénom du chat' %>
              <%= f.text_field :title, class: 'form-control', placeholder: "Prénom du chat" %>
            </div>

            <div class="form-group">
                <%= f.label :description, 'Description du chat' %>
                <%= f.text_field :description, class: 'form-control', placeholder: "Mettre la description du chat ici" %>
            </div>

            <div class="form-group">
                <label><%= f.number_field :price, id: "input-slider-value", class: "range-slider-value"%>€</label>
            </div>

            <div class="actions pull-right">
              <%= f.submit "Modifier l'article", class: "btn btn-primary-filled btn-rounded"%>
            </div>
              <% end %>
      </div>
    </div>
  </div>
</section>
